---
import NavLink from "./NavLink.jsx";
import NavMenu from "./NavMenu.jsx";
---
<nav class="navbar relative m-auto justify-between bg-base-100 *:bg-inherit">
  <ul>
    <li class="flex items-center">
      <NavLink locationPath={Astro.url.pathname} href="/" className="flex hover:opacity-80 gap-1 px-2">
      <img src={`${import.meta.env.BASE_URL}favicon.svg`} alt="Logo" width="32" height="32" />
        <h2 class="text-xl font-bold hidden sm:block">Ungrammar Language Features</h2>
      </NavLink>
      <NavLink href="https://binhtran432k.com" className="link link-hover text-xs">by Binh Tran</NavLink>
    </li>
  </ul>
  <NavMenu client:only="preact" />
</nav>
