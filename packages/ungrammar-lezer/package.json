{
	"name": "ungrammar-lezer",
	"description": "lezer-based Ungrammar grammar",
	"version": "0.0.0",
	"author": "Binh Tran <binhtran432k@gmail.com>",
	"license": "MIT",
	"main": "./lib/umd/index.js",
	"typings": "./lib/umd/index",
	"module": "./lib/esm/index.js",
	"type": "module",
	"scripts": {
		"compile": "bun compile:parser && bun compile:umd && bun compile:esm",
		"compile:parser": "lezer-generator src/ungrammar.grammar -o src/parser",
		"compile:umd": "tsc -p ./src",
		"compile:esm": "tsc -p ./src/tsconfig.esm.json"
	},
	"dependencies": {
		"@lezer/highlight": "^1.2.0",
		"@lezer/lr": "^1.4.1"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@lezer/generator": "^1.7.1"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
